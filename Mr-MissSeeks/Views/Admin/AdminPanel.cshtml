        }

        function DeleteItem(itemId) {
            if (confirm('Are You Sure to Delete this Item Record ?'))
            {

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteItem","Admin")',
                    data: {
                        itemId: itemId,
                    },

                    success: function (data) {
                        if (data.success)
                        {
                            dataTableItem.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            });

                        }
                    }

                });
            }
        }
    </script>

    <script>
        function PopupFormStatistics(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);
                    $.ajax({
                        type: "POST",
                        url: "Admin/statisticsList",
                        dataType: "json"
                    })
                    PopupStatistics = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: 'Statistics',

                        height: 500,
                        width: 700,
                        close: function () {
                            PopupStatistics.dialog('destroy').remove();
                            window.location.reload();
                        }

                    });
                });
        }
        function SubmitFormStatistics(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            PopupStatistics.dialog('close');


                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }
                });
            }
            return false;
        }



    </script>



}